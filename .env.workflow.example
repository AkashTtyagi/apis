# ============================================
# WORKFLOW MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to your main .env file and update with your actual values

# ============================================
# SMTP EMAIL CONFIGURATION
# ============================================
# Required for workflow email notifications

# SMTP Server Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Sender Email (used as FROM address)
SMTP_FROM=noreply@yourcompany.com

# For Gmail:
# 1. Enable 2-Factor Authentication
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the generated password in SMTP_PASSWORD

# For other providers:
# - Office 365: smtp.office365.com (Port: 587)
# - Outlook: smtp-mail.outlook.com (Port: 587)
# - Yahoo: smtp.mail.yahoo.com (Port: 465 or 587)
# - SendGrid: smtp.sendgrid.net (Port: 587)
# - Mailgun: smtp.mailgun.org (Port: 587)

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application URL (used in email links)
APP_URL=http://localhost:3000

# API Base URL
API_BASE_URL=http://localhost:3000/api

# ============================================
# DATABASE CONFIGURATION
# ============================================
# (Add these if not already present in your .env)

DB_HOST=localhost
DB_PORT=3306
DB_NAME=hrms_database
DB_USER=root
DB_PASSWORD=your_password_here

# Database connection pool settings (optional)
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# ============================================
# WORKFLOW AUTO-ACTION SCHEDULER
# ============================================

# Enable/disable auto-action scheduler
WORKFLOW_SCHEDULER_ENABLED=true

# Cron schedule for auto-actions (default: every 1 hour)
# Format: minute hour day month weekday
# Examples:
#   '0 * * * *' - Every hour
#   '*/30 * * * *' - Every 30 minutes
#   '0 9-17 * * 1-5' - Every hour from 9 AM to 5 PM, Monday to Friday
WORKFLOW_AUTO_ACTION_CRON=0 * * * *

# Cron schedule for SLA warnings (default: every 30 minutes)
WORKFLOW_SLA_WARNING_CRON=*/30 * * * *

# SLA warning threshold in hours (send warning X hours before breach)
WORKFLOW_SLA_WARNING_HOURS=4

# ============================================
# WORKFLOW NOTIFICATION SETTINGS
# ============================================

# Enable/disable notifications
WORKFLOW_NOTIFICATIONS_ENABLED=true

# Send email on submission
WORKFLOW_SEND_SUBMISSION_EMAIL=true

# Send email on approval
WORKFLOW_SEND_APPROVAL_EMAIL=true

# Send email on rejection
WORKFLOW_SEND_REJECTION_EMAIL=true

# Send email on SLA breach
WORKFLOW_SEND_SLA_BREACH_EMAIL=true

# Send reminder emails
WORKFLOW_SEND_REMINDER_EMAIL=true

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable workflow audit logging
WORKFLOW_AUDIT_LOG_ENABLED=true

# ============================================
# SECURITY SETTINGS
# ============================================

# JWT Secret (if using JWT authentication)
JWT_SECRET=your-secret-key-here

# Session secret (if using express-session)
SESSION_SECRET=your-session-secret-here

# ============================================
# OPTIONAL: REDIS CONFIGURATION (for caching)
# ============================================
# Uncomment if using Redis for caching workflow data

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================
# OPTIONAL: CLOUD STORAGE (for attachments)
# ============================================
# Uncomment if using AWS S3 or similar for file storage

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ============================================
# DEVELOPMENT/TESTING SETTINGS
# ============================================

# Node environment
NODE_ENV=development

# Enable debug mode
DEBUG=false

# Mock email sending (useful for testing)
MOCK_EMAIL_SENDING=false

# Skip authentication (for testing only - NEVER use in production)
SKIP_AUTH=false

# ============================================
# PRODUCTION SETTINGS
# ============================================
# For production deployment, ensure:
# 1. NODE_ENV=production
# 2. DEBUG=false
# 3. MOCK_EMAIL_SENDING=false
# 4. SKIP_AUTH=false
# 5. Use strong JWT_SECRET and SESSION_SECRET
# 6. Use production SMTP credentials
# 7. Enable HTTPS (set APP_URL to https://)
# 8. Configure proper database backup strategy
# 9. Set up monitoring and alerting
# 10. Review and configure security headers
