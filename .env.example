# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hrms_db
DB_USER=root
DB_PASSWORD=your_password
DB_DIALECT=mysql

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Frontend URL (for email links - set this to your frontend application URL)
# Examples:
#   Development: http://localhost:4200 (Angular), http://localhost:3001 (React), http://localhost:5173 (Vite)
#   Production: https://hrms.yourcompany.com
FRONTEND_URL=http://localhost:4200

# Application Configuration
API_VERSION=v1

# AWS S3 / S3-Compatible Storage Configuration
# For AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# For S3-Compatible Storage (MinIO, DigitalOcean Spaces, etc.)
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_ENDPOINT=https://your-minio-endpoint.com
S3_BUCKET_NAME=hrms-documents
S3_FORCE_PATH_STYLE=true

# Signed URL Configuration
SIGNED_URL_EXPIRY=900
MAX_FILE_SIZE_MB=10
